<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.AddEditNotePage"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="True">

    <Grid>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Button Text="Save Note" TextColor="{StaticResource ButtonText}" BackgroundColor="{StaticResource Button}" Clicked="OnSaveNoteClicked"/>
            <Entry x:Name="TitleEntry" Placeholder="Enter Title"/>
            <Editor x:Name="ContentEditor" Placeholder="Content" HeightRequest="150"/>
            <Button Text="Take Photo" TextColor="{StaticResource ButtonText}" BackgroundColor="{StaticResource Button}" Clicked="OnTakePhotoClicked"/>
            <Image x:Name="PhotoImage" HeightRequest="200"/>
        </VerticalStackLayout>

        <ActivityIndicator x:Name="SaveIndicator" IsRunning="False" IsVisible="False" 
                           Color="White"
                           VerticalOptions="Center" 
                           HorizontalOptions="Center"/>
    </Grid>

</ContentPage>